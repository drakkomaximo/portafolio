              <label for="message" class="block text-sm font-medium text-white/90 mb-3">
                {t.contact.form.message}
              </label>
              <textarea id="message" name="message" rows="4" class="w-full px-6 py-4 bg-white/10 border border-white/20 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-white/50 backdrop-blur-md" 
                placeholder={t.contact.form.messagePlaceholder} required></textarea>
