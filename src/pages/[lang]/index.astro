            <div>
              <label for="name" class="block text-sm font-medium text-white/90 mb-3">
                {t.contact.form.name}
              </label>
              <input type="text" id="name" name="name" class="w-full px-6 py-4 bg-white/10 border border-white/20 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-white/50 backdrop-blur-md" 
                placeholder={t.contact.form.namePlaceholder} required>
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white/90 mb-3">Email</label>
              <input type="email" id="email" name="email" class="w-full px-6 py-4 bg-white/10 border border-white/20 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent text-white placeholder-white/50 backdrop-blur-md" 
                placeholder={t.contact.form.emailPlaceholder} required>
            </div>
