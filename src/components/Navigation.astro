---
// Navigation component
---

<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md border-b transition-all duration-300" style="background: var(--glass-bg); border-color: var(--glass-border);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold transition-colors" style="color: var(--text-primary);">
          AVT
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#inicio" class="px-3 py-2 text-sm font-medium transition-colors hover:scale-105" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent-primary)'" onmouseout="this.style.color='var(--text-secondary)'">
            Inicio
          </a>
          <a href="#sobre-mi" class="px-3 py-2 text-sm font-medium transition-colors hover:scale-105" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent-primary)'" onmouseout="this.style.color='var(--text-secondary)'">
            Sobre Mí
          </a>
          <a href="#proyectos" class="px-3 py-2 text-sm font-medium transition-colors hover:scale-105" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent-primary)'" onmouseout="this.style.color='var(--text-secondary)'">
            Proyectos
          </a>
          <a href="#habilidades" class="px-3 py-2 text-sm font-medium transition-colors hover:scale-105" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent-primary)'" onmouseout="this.style.color='var(--text-secondary)'">
            Habilidades
          </a>
          <a href="#contacto" class="px-3 py-2 text-sm font-medium transition-colors hover:scale-105" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent-primary)'" onmouseout="this.style.color='var(--text-secondary)'">
            Contacto
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset transition-all duration-300"
          style="background: var(--glass-bg); color: var(--text-primary); border: 1px solid var(--glass-border);"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div class="md:hidden hidden" id="mobile-menu" style="background: var(--glass-bg); border-color: var(--glass-border);">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t transition-all duration-300">
      <a href="#inicio" class="block px-3 py-2 text-base font-medium transition-colors" style="color: var(--text-secondary);">
        Inicio
      </a>
      <a href="#sobre-mi" class="block px-3 py-2 text-base font-medium transition-colors" style="color: var(--text-secondary);">
        Sobre Mí
      </a>
      <a href="#proyectos" class="block px-3 py-2 text-base font-medium transition-colors" style="color: var(--text-secondary);">
        Proyectos
      </a>
      <a href="#habilidades" class="block px-3 py-2 text-base font-medium transition-colors" style="color: var(--text-secondary);">
        Habilidades
      </a>
      <a href="#contacto" class="block px-3 py-2 text-base font-medium transition-colors" style="color: var(--text-secondary);">
        Contacto
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Close mobile menu when clicking on a link
  const mobileLinks = document.querySelectorAll('#mobile-menu a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
