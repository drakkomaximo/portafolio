---
import CoffeeChat from '../CoffeeChat.tsx';
const { t } = Astro.props;
---

<section id="contact" class="py-20 relative section-bg-1">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Modern Section Header -->
    <div class="text-center mb-6">
      <!-- Coffee-themed header with custom design -->
      <div class="relative inline-block px-8 py-4 bg-gradient-to-br from-amber-900/20 to-orange-900/20 rounded-2xl border border-amber-500/30 mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
        <!-- Coffee cup icon -->
        <div class="absolute -top-3 -left-3 w-8 h-8 bg-gradient-to-br from-amber-400 to-orange-600 rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M2 21h18v-2H2v2zm2-4h14V5H4v12zm2-2h10V7H6v8zm4-6h2v4h-2V9z"/>
          </svg>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-amber-400 via-orange-400 to-red-400 bg-clip-text text-transparent animate-pulse-slow">{t.contact.title}</h2>
      </div>
    </div>
    
    <!-- React Coffee Chat Component -->
    <CoffeeChat client:load />
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes textGlow {
    0%, 100% {
      text-shadow: 0 0 5px rgba(251, 191, 36, 0.5);
    }
    50% {
      text-shadow: 0 0 20px rgba(251, 191, 36, 0.8), 0 0 30px rgba(251, 191, 36, 0.6);
    }
  }

  @keyframes pulseButton {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(251, 191, 36, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(251, 191, 36, 0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-pulse-slow {
    animation: pulse 2s ease-in-out infinite;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-text-glow {
    animation: textGlow 2s ease-in-out infinite;
  }

  .animate-pulse-button {
    animation: pulseButton 2s infinite;
  }
</style>
