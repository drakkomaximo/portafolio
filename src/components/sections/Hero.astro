---
const { t } = Astro.props;
---

<section class="hero-section relative py-10 lg:py-28 overflow-hidden section-bg-1">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <!-- Subtle floating shapes -->
    <div class="absolute top-16 left-8 w-48 h-48 rounded-full blur-2xl animate-pulse" style="background: color-mix(in srgb, var(--accent-primary) 5%, transparent);"></div>
    <div class="absolute top-32 right-16 w-64 h-64 rounded-full blur-2xl animate-pulse delay-1000" style="background: color-mix(in srgb, var(--accent-secondary) 5%, transparent);"></div>
    <div class="absolute bottom-16 left-1/3 w-56 h-56 rounded-full blur-2xl animate-pulse delay-2000" style="background: color-mix(in srgb, var(--accent-tertiary) 5%, transparent);"></div>
    
    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 opacity-20">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="80" height="80" patternUnits="userSpaceOnUse">
            <circle cx="40" cy="40" r="1" fill="#94A3B8" fill-opacity="0.1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
      </svg>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="relative z-10 text-center max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Subtle accent line -->
    <div class="w-16 h-0.5 mx-auto mb-6" style="background: linear-gradient(to right, transparent, var(--accent-primary), transparent);"></div>
    
    <!-- Main Title - more reasonable size -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-fade-in-up animate-delay-200 leading-tight" style="color: var(--text-primary);">
      {t.hero.title}
    </h1>
    
    <!-- Subtitle - cleaner design -->
    <div class="inline-block px-6 py-0 backdrop-blur-sm rounded-lg border mb-2 animate-fade-in-up animate-delay-400" style="background: var(--glass-bg); border-color: var(--glass-border);">
      <h2 class="text-xl md:text-2xl lg:text-3xl font-semibold" style="color: var(--text-secondary);">
        {t.hero.subtitle}
      </h2>
    </div>
    
    <!-- Description - smaller and more readable -->
    <p class="text-lg md:text-xl mb-12 leading-relaxed max-w-3xl mx-auto animate-fade-in-up animate-delay-600" style="color: var(--text-muted);">
      {t.hero.description}
    </p>
    
    <!-- Stats Cards - more compact -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto animate-fade-in-up animate-delay-800">
      <div class="group relative p-6 backdrop-blur-sm rounded-xl border transition-all duration-300 hover:scale-102" style="background: var(--glass-bg); border-color: var(--glass-border);">
        <div class="relative z-10">
          <div class="text-3xl md:text-4xl font-bold mb-2" style="color: var(--text-primary);">5+</div>
          <div class="text-sm font-medium" style="color: var(--text-muted);">{t.quickStats.yearsExp}</div>
        </div>
      </div>
      
      <div class="group relative p-6 backdrop-blur-sm rounded-xl border transition-all duration-300 hover:scale-102" style="background: var(--glass-bg); border-color: var(--glass-border);">
        <div class="relative z-10">
          <div class="text-3xl md:text-4xl font-bold mb-2" style="color: var(--text-primary);">50+</div>
          <div class="text-sm font-medium" style="color: var(--text-muted);">{t.quickStats.projects}</div>
        </div>
      </div>
      
      <div class="group relative p-6 backdrop-blur-sm rounded-xl border transition-all duration-300 hover:scale-102" style="background: var(--glass-bg); border-color: var(--glass-border);">
        <div class="relative z-10">
          <div class="text-3xl md:text-4xl font-bold mb-2" style="color: var(--text-primary);">100%</div>
          <div class="text-sm font-medium" style="color: var(--text-muted);">{t.quickStats.satisfaction}</div>
        </div>
      </div>
    </div>
  </div>
</section>
