---
import SkillsTabs from '../SkillsTabs.tsx';
import { skillsData } from '../../data/skills.ts';

const { t } = Astro.props;

---

<section id="skills" class="py-20 relative bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Modern Section Header -->
    <div class="text-center mb-16">
      <div class="inline-block px-6 py-3 bg-gray-800/50 border border-gray-700 rounded-lg mb-6 animate-fade-in-up" style="animation-delay: 0.2s;">
        <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent animate-pulse-slow">{t.skills.title}</h2>
      </div>
      <div class="w-24 h-0.5 bg-gradient-to-r from-transparent via-slate-400 to-transparent mx-auto mb-6 animate-fade-in-up" style="animation-delay: 0.4s;"></div>
      <p class="text-xl text-gray-300 font-light animate-fade-in-up" style="animation-delay: 0.6s;">{t.skills.subtitle}</p>
    </div>
    
    <!-- React Skills Tabs Component -->
    <SkillsTabs client:load skillsData={skillsData} />
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-slide-in-left {
    animation: slideInFromLeft 0.6s ease-out forwards;
  }

  .animate-pulse-slow {
    animation: pulse 2s ease-in-out infinite;
  }
</style>
