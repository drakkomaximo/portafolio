---
import ThemeToggle from './ThemeToggle.astro';
import LanguageToggle from './LanguageToggle.astro';

const { t } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-xl border-b" style="background: var(--glass-bg); border-color: var(--glass-border);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-24">
      <!-- Logo with elegant design -->
      <div class="flex items-center group">
        <div class="relative">
          <div class="w-12 h-12 rounded-2xl flex items-center justify-center shadow-lg transition-all duration-300 group-hover:scale-105" style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));">
            <span class="text-white font-bold text-2xl tracking-wider">AVT</span>
          </div>
          <div class="absolute -inset-1 rounded-2xl blur opacity-20 group-hover:opacity-30 transition-opacity duration-300" style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));"></div>
        </div>
      </div>
      
      <!-- Elegant Navigation -->
      <nav class="hidden md:flex items-center space-x-1">
        <a href="#about" class="relative px-6 py-3 font-medium text-lg transition-all duration-300 group" style="color: var(--text-muted);">
          {t.aboutMe.title}
          <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: var(--glass-bg);"></div>
          <div class="absolute bottom-0 left-1/2 w-0 h-0.5 group-hover:w-1/2 transition-all duration-300" style="background: var(--accent-primary);"></div>
        </a>
        <a href="#projects" class="relative px-6 py-3 font-medium text-lg transition-all duration-300 group" style="color: var(--text-muted);">
          {t.projects.title}
          <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: var(--glass-bg);"></div>
          <div class="absolute bottom-0 left-1/2 w-0 h-0.5 group-hover:w-1/2 transition-all duration-300" style="background: var(--accent-primary);"></div>
        </a>
        <a href="#skills" class="relative px-6 py-3 font-medium text-lg transition-all duration-300 group" style="color: var(--text-muted);">
          {t.skills.title}
          <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: var(--glass-bg);"></div>
          <div class="absolute bottom-0 left-1/2 w-0 h-0.5 group-hover:w-1/2 transition-all duration-300" style="background: var(--accent-primary);"></div>
        </a>
        <a href="#contact" class="relative px-6 py-3 font-medium text-lg transition-all duration-300 group" style="color: var(--text-muted);">
          {t.contact.title}
          <div class="absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" style="background: var(--glass-bg);"></div>
          <div class="absolute bottom-0 left-1/2 w-0 h-0.5 group-hover:w-1/2 transition-all duration-300" style="background: var(--accent-primary);"></div>
        </a>
      </nav>
      
      <!-- Toggles with modern styling -->
      <div class="flex items-center space-x-3">
        <ThemeToggle />
        <LanguageToggle />
      </div>
    </div>
  </div>
</header>
